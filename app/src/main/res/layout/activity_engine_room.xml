<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EngineRoom">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageView3"
        android:layout_width="960dp"
        android:layout_height="540dp"
        card_view:srcCompat="@drawable/download" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/polish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/engine_room_cleanness" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".28"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/engineroomcleannessspinner"
                            android:background="#EEEEEE"
                            android:layout_width="match_parent"
                            android:layout_height="27dp" />


                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"

                            android:layout_gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            card_view:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

                    </RelativeLayout>

                <TextView
                    android:id="@+id/oilconsinstency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oil_consistency" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".28"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/oilconsinstencyspinner"
                            android:background="#EEEEEE"
                            android:layout_width="match_parent"
                            android:layout_height="27dp" />


                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"

                            android:layout_gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            card_view:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/coolingwater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cooling_water" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".28"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/coolingwaterspinner"
                            android:background="#EEEEEE"
                            android:layout_width="match_parent"
                            android:layout_height="27dp" />


                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"

                            android:layout_gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            card_view:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/waterleaking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/water_leaking" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".28"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/waterleakingspinner"
                            android:background="#EEEEEE"
                            android:layout_width="match_parent"
                            android:layout_height="27dp" />


                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"

                            android:layout_gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            card_view:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/antifreezedegree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/antifreeze_degree" />

                    <EditText
                        android:id="@+id/antifreezedegreetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/engineroomcover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="@string/engineroom_cover" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".28"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/engineroomcoverspinner"
                            android:background="#EEEEEE"
                            android:layout_width="match_parent"
                            android:layout_height="27dp" />


                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"

                            android:layout_gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            card_view:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>